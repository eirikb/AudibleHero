{
  "manifest_version": 2,
  "name": "AudibleHero for Audible",
  "description": "List new books from your favorite authors and series on www.audible.com",
  "version": "2",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.audible.com/*"],
      "js": ["app.js"]
    }
  ],
  "background": {
    "scripts": [
      "nocookie.js"
    ]
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "*://*.audible.com/*"
  ]
}