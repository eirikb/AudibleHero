{
  "manifest_version": 2,
  "name": "AudibleHero for Audible",
  "description": "List new books from your favorite authors and series on www.audible.com",
  "version": "7",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.audible.com/audiblehero",
        "*://*.audible.com.au/audiblehero",
        "*://*.audible.co.uk/audiblehero"
      ],
      "css": [
        "clear.css"
      ],
      "js": [
        "init.js",
        "app.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "app.css",
    "fonts/*",
    "img/*"
  ],
  "page_action": {
    "default_title": "AudibleHero",
    "default_icon": "logo128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "*://*.audible.com/*",
    "tabs"
  ]
}